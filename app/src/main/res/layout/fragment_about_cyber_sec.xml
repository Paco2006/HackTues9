<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_main_background"
    android:padding="25dp"
    tools:context=".AboutCyberSecFrag">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/cybersecHead1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="What is cybersecurity?"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>


            <TextView
                android:id="@+id/whatIsCybersec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cybersecHead1"
                android:layout_marginTop="15dp"
                android:text="@string/what_is_cybersec"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="normal">

            </TextView>

            <TextView
                android:id="@+id/cybersecHead2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/whatIsCybersec"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="Why is cybersecurity so important?"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/whyIsCybersecImportant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cybersecHead2"
                android:layout_marginTop="15dp"
                android:text="@string/why_is_cybersec_important"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="normal">

            </TextView>

            <TextView
                android:id="@+id/cybersecHead3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/whyIsCybersecImportant"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="What are the benefits of cybersecurity?"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/benefitsOfCybersec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cybersecHead3"
                android:layout_marginTop="15dp"
                android:text="@string/benefits_of_cybersec"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="normal">

            </TextView>


        </RelativeLayout>


    </ScrollView>

</FrameLayout>